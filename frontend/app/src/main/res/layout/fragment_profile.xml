    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="7dp"
        android:progress="50"
        android:scaleY="1.2"
        android:progressBackgroundTint="#FFFFFF"
        android:progressBackgroundTintMode="add"
        android:progressTint="#00AFB9"
        android:progressDrawable="@drawable/rounded_progress_bar"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_score"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/app_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="240 points till Level 8"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/progressBar"
        />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Weekly Stats"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.15" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center"

                android:background="@drawable/rounded_corner"
                android:elevation="3dp"
                android:translationZ="3dp">


                <ProgressBar

                    style="?android:attr/progressBarStyleHorizontal"
                    android:rotation="-90"

                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-16dp"
                    android:progress="20"
                    android:scaleY="1"
                    android:scaleX="2"
                    android:max="100"
                    android:progressDrawable="@drawable/rounded_progress_inside"
                    />
                <ProgressBar

                    style="?android:attr/progressBarStyleHorizontal"
                    android:rotation="-90"

                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-16dp"
                    android:progress="20"
                    android:scaleY="1"
                    android:scaleX="2"
                    android:max="100"
                    android:progressDrawable="@drawable/rounded_progress_inside"

                    />
                <ProgressBar

                    style="?android:attr/progressBarStyleHorizontal"
                    android:rotation="-90"

                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-16dp"
                    android:progress="30"
                    android:scaleY="1"
                    android:scaleX="2"
                    android:max="100"
                    android:progressDrawable="@drawable/rounded_progress_inside"

                    />
                <ProgressBar

                    style="?android:attr/progressBarStyleHorizontal"
                    android:rotation="-90"

                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-16dp"
                    android:progress="20"
                    android:scaleY="1"
                    android:scaleX="2"
                    android:max="100"
                    android:progressDrawable="@drawable/rounded_progress_inside"/>
                <ProgressBar

                    style="?android:attr/progressBarStyleHorizontal"
                    android:rotation="-90"

                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-16dp"
                    android:progress="20"
                    android:scaleY="1"
                    android:scaleX="2"
                    android:max="100"
                    android:progressDrawable="@drawable/rounded_progress_inside"
                    />
                <ProgressBar

                    style="?android:attr/progressBarStyleHorizontal"
                    android:rotation="-90"

                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-16dp"
                    android:progress="20"
                    android:scaleY="1"
                    android:scaleX="2"
                    android:max="100"
                    android:progressDrawable="@drawable/rounded_progress_inside"
                    />
                <ProgressBar
                    android:id="@+id/progressBarWed"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:rotation="-90"

                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-16dp"
                    android:progress="20"
                    android:scaleY="1"
                    android:scaleX="2"
                    android:max="100"
                    android:progressDrawable="@drawable/rounded_progress_inside"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Th       F       S        S       M       T       W"
                />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:weightSum="2"
                android:elevation="3dp"
                android:translationZ="3dp">

                <ImageView
                    android:id="@+id/insta"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:alpha="0.7"
                    app:srcCompat="@drawable/instagram"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "Instagram            "


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "5hr 32min"


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progressBarInsta"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:progress="50"
                        android:scaleY="1.2"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:weightSum="2"
                android:elevation="3dp"
                android:translationZ="3dp">

                <ImageView
                    android:id="@+id/face"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:alpha="0.7"
                    app:srcCompat="@drawable/facebook"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "Facebook            "


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/time4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "4hr 45min"


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progressBarFace"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:progress="40" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:weightSum="2"
                android:elevation="3dp"
                android:translationZ="3dp">

                <ImageView
                    android:id="@+id/TT"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:alpha="0.7"
                    app:srcCompat="@drawable/tiktok"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tiktok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "Tiktok                   "


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text= "3hr 19min"


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progressBarTiktok"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:progress="30" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:weightSum="2"
                android:elevation="3dp"
                android:translationZ="3dp">

                <ImageView
                    android:id="@+id/twit"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:alpha="0.7"
                    app:srcCompat="@drawable/twitter"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/twitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "Twitter                  "


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/time5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "2hr 17min"


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progressBarTwitter"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:progress="20" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:weightSum="2"
                android:elevation="3dp"
                android:translationZ="3dp">

                <ImageView
                    android:id="@+id/Red"
                    android:layout_width="36dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_height="40dp"
                    android:alpha="0.7"
                    app:srcCompat="@drawable/reddit"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/reddit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:text= "Reddit                   "


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/time3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text= "1hr 24min"


                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progressBarReddit"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:progress="15" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="Ashley Chen"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/total_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:text=" @ashleyChen888"
        android:textColor="#57544D"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/total_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/full_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Level 8"
        android:textColor="#E289F2"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="22sp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>